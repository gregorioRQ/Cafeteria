<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="int02JPAPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.mycompany.integrador_02.logica.Barista</class>
    <class>com.mycompany.integrador_02.logica.Persona</class>
    <class>com.mycompany.integrador_02.logica.Producto</class>
    <class>com.mycompany.integrador_02.logica.Camarero</class>
    <class>com.mycompany.integrador_02.logica.Pedido</class>
    <class>com.mycompany.integrador_02.logica.Empleado</class>
    <class>com.mycompany.integrador_02.logica.Usuario</class>
    <class>com.mycompany.integrador_02.logica.Administrador</class>
    <class>com.mycompany.integrador_02.logica.Cafe</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cafeteria?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="123456789"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
